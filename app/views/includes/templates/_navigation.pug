mixin navLink(link, name)
 li.nav-item(
   class={active: name == selected}
    )
  a.nav-link(href=link)
    span.sr-only #{name}
  li
    a.white-text.nav-link(
      href=link,
      class={'active text-info': name == selected}
    ) #{name}

nav#navbar.navbar.navbar-expand-lg.fixed-top.nav.bg-secondary
  .container
    a.navbar-brand(href='#')
      img.main-logo(src="/images/logo.png")
    button.navbar-toggler.white-text-hidden-lg-up(type='button', data-toggle='collapse', data-target='#collapsibleNavId', aria-controls='collapsibleNavId', aria-expanded='false', aria-label='Toggle navigation')
      i.fa.fa-navicon
    #collapsibleNavId.collapse.navbar-collapse
      ul.navbar-nav.ml-auto.mt-2.mt-lg-0
        +navLink('/', "About Us")
        +navLink('/services.html', "Portfolio")
        +navLink('/training.html', "Services")
        +navLink('/corporate.html', "Technologies")
        +navLink('/about.html', "Insight")
        
       
       
